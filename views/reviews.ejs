<md-content class="main-content" ng-controller="ReviewCtrl">

  <md-table-container>
    <table md-table md-progress="promise">
      <thead md-head>
        <tr md-row>
          <th md-column class="text-center text-uppercase bold">
            <span translate="CUSTOMER" translate-cloak="CUSTOMER"></span>
          </th>
          <th md-column class="text-center text-uppercase bold">
            <span translate="RATING" translate-cloak="RATING"></span>
          </th>
          <th md-column class="text-center text-uppercase bold">
            <span translate="ORDER_NUMBER" translate-cloak="ORDER_NUMBER"></span>
          </th>
          <th md-column class="text-center text-uppercase bold">
            <span translate="ITEM" translate-cloak="ITEM"></span>
          </th>
          <th md-column class="text-center text-uppercase bold">
            <span translate="STATUS" translate-cloak="STATUS"></span>
          </th>
          <th md-column class="text-center text-uppercase bold">
            <span translate="CREATED_AT" translate-cloak="CREATED_AT"></span>
          </th>
          <th md-column></th>
        </tr>
      </thead>
      <tbody md-body>
        <tr md-row ng-repeat="review in reviews">
          <td md-cell>
            <img class="img-thumb img-circle" style="margin-right: 6px" ng-src="/images/avatar.png"
              actual-src="{{ review.user.photo.url() }}" />
              <span ng-if="review.user.name">{{:: review.user.name }}</span>
              <span ng-if="!review.user.name" translate="GUEST" translate-cloak="GUEST"></span>
          </td>
          <td md-cell class="text-center">
            <star-rating ng-model="review.rating" readonly="true">
            </star-rating>
          </td>
          <td class="text-center link" md-cell ng-click="onViewOrder($event, review.order)">
            #{{:: review.order.number }}
          </td>
          <td md-cell class="text-center">{{:: review.item.name }}</td>
          <td md-cell class="text-center">
            <md-select class="label" ng-model="review.status" aria-label="Status" ng-class="{ 'green': review.status === 'Published',
						'red': review.status === 'Banned',
						'yellow': review.status === 'Pending' }">
              <md-option value="Pending" ng-click="onChangeStatus(review, 'Pending')" translate="PENDING" translate-cloak="PENDING">
              </md-option>
              <md-option value="Banned" ng-click="onChangeStatus(review, 'Banned')" translate="BANNED" translate-cloak="BANNED">
              </md-option>
              <md-option value="Published" ng-click="onChangeStatus(review, 'Published')" translate="PUBLISHED" translate-cloak="PUBLISHED">
              </md-option>
            </md-select>
          </td>
          <td md-cell class="text-center">
            {{:: review.createdAt | date:'yyyy-MM-dd' }}
          </td>
          <td md-cell>

            <section layout="row" layout-align="center center">
              <md-button class="md-icon-button md-primary" ng-click="onView($event, review)" aria-label="Edit">
                <ng-md-icon icon="rate_review"></ng-md-icon>
              </md-button>
              <md-button class="md-icon-button md-primary" ng-click="onDelete($event, review)" aria-label="Delete">
                <ng-md-icon icon="clear"></ng-md-icon>
              </md-button>
            </section>
          </td>
        </tr>
      </tbody>
    </table>
  </md-table-container>
  <md-table-pagination md-limit-options="rowOptions" md-limit="query.limit" md-page="query.page"
    md-total="{{query.total}}" md-on-paginate="onPaginationChange"
    md-label="{ rowsPerPage: '{{ 'ROWS_PER_PAGE' | translate }}', of: '{{ 'OF' | translate }}' }">
  </md-table-pagination>
</md-content>